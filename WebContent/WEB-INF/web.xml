<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 <servlet>
  <servlet-name>CreeClient</servlet-name>
  <servlet-class>Servlets.CreeClient</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>CreeCommande</servlet-name>
  <servlet-class>Servlets.CreeCommande</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>Download</servlet-name>
  <servlet-class>Servlets.Download</servlet-class>
  <init-param>
		<param-name>chemin</param-name> 
		<param-value>/HOSTED/</param-value> 
	</init-param>
 </servlet>
 <servlet>
  <servlet-name>recherche</servlet-name>
  <servlet-class>Servlets.recherche</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>erreur</servlet-name>
  <servlet-class>Servlets.error</servlet-class>
 </servlet>
  <servlet-mapping>
  <servlet-name>erreur</servlet-name>
  <url-pattern>/erreur</url-pattern>
 </servlet-mapping>

 <servlet>
  <servlet-name>Upload</servlet-name>
  <servlet-class>Servlets.upload</servlet-class>
  <init-param>
		<param-name>chemin</param-name> 
		<param-value>/HOSTED/</param-value> 
	</init-param>
   <multipart-config>
		<location>A:/tmp</location>
		<max-file-size>30485760</max-file-size>
        <max-request-size>40971520</max-request-size>
        <file-size-threshold>5242880</file-size-threshold>
	</multipart-config>
 </servlet>
 <servlet>
  <servlet-name>search</servlet-name>
  <servlet-class>Servlets.search</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>search</servlet-name>
  <url-pattern>/search</url-pattern>
 </servlet-mapping>
  <servlet-mapping>
  <servlet-name>Download</servlet-name>
  <url-pattern>/fichiers/*</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>recherche</servlet-name>
  <url-pattern>/recherche</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>CreeClient</servlet-name>
  <url-pattern>/CreeClient</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>CreeCommande</servlet-name>
  <url-pattern>/CreeCommande</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>Upload</servlet-name>
  <url-pattern>/upload</url-pattern>
 </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/erreur</location>
</error-page>

<error-page>
    <error-code>403</error-code>
    <location>/erreur</location>
</error-page>

<error-page>
    <error-code>404</error-code>
    <location>/erreur</location>
</error-page>
 
  <servlet>
    <servlet-name>ServletUser</servlet-name>
    <servlet-class>Servlets.ServletUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletUser</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletCnx</servlet-name>
    <servlet-class>Servlets.ServletCnx</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletCnx</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
 
 <servlet>
  <servlet-name>ServletAdmin</servlet-name>
  <servlet-class>Servlets.ServletAdmin</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>ServletAdmin</servlet-name>
  <url-pattern>/admin</url-pattern>
 </servlet-mapping>
</web-app>
